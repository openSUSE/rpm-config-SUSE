# for %post
%install_info(:-:) \
    ALL_ARGS=(%{**}) \
    if test -x /sbin/install-info ; then \
	/sbin/install-info "${ALL_ARGS[@]}" || : \
    fi ;

# for %preun
%install_info_delete(:-:) \
    test -n "$FIRST_ARG" || FIRST_ARG=$1 \
    if test -x /sbin/install-info ; then \
	if [ "$FIRST_ARG" = 0 ]; then \
	    /sbin/install-info --quiet --delete %{**} || : \
	fi ; \
    fi ;

